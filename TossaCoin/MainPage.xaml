<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="TossaCoin.MainPage">

    <ScrollView>
        <FlexLayout AlignItems="Center" JustifyContent="Center">
            <StackLayout
                Padding="30,0"
                Spacing="25"
                Orientation="Vertical">

                <Label
                    Text="Vamos jogar cara ou coroa?"
                    FontAttributes="Bold"
                    FontSize="Large"/>

                <Image x:Name="coin"
                       Source="https://images.tcdn.com.br/img/img_prod/1083822/1_real_2a_familia_fc_1673_1_30e390b3f0e4d72f51dea93dd4b52002.png"
                       WidthRequest="200"
                       HeightRequest="200"/>

                <Label x:Name="result"/>

                <Picker
                    Title="Selecione a face da moeda."
                    x:Name="picker">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Cara</x:String>
                            <x:String>Coroa</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>

                <Button
                    Text="JOGAR"
                    Clicked="tossACoin"
                    BackgroundColor="#4F4F4F"
                    TextColor="White"
                    CornerRadius="10"/>

            </StackLayout>
        </FlexLayout>

    </ScrollView>

</ContentPage>
